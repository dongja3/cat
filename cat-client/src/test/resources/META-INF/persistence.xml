<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="adt" transaction-type="RESOURCE_LOCAL">
		<class>com.dianping.cat.eclipselink.entity.Author</class>
		<class>com.dianping.cat.eclipselink.entity.Book</class>
		<class>com.dianping.cat.eclipselink.entity.ContactInfo</class>
		<class>com.dianping.cat.eclipselink.entity.PubInfo</class>
		<class>com.dianping.cat.eclipselink.entity.Publisher</class>
		<class>com.dianping.cat.eclipselink.entity.Computer</class>
		<class>com.dianping.cat.eclipselink.entity.SupportingData1</class>
		<class>com.dianping.cat.eclipselink.entity.SupportingData2</class>
		
		<properties>
			<property name="javax.persistence.jdbc.driver"
				value="oracle.jdbc.driver.OracleDriver" />

			
			<property name="javax.persistence.jdbc.url"
				value="jdbc:oracle:thin:@fwtest-w7:1521/FWKSDB" />
			<property name="javax.persistence.jdbc.user" value="adt_owner" />
			<property name="javax.persistence.jdbc.password" value="adtowner" />

			
			<property name="eclipselink.session-event-listener" value="com.dianping.cat.eclipselink.CatSessionEventAdapter" />
				
				
			<!-- EclipseLink should create the database schema automatically -->
			<property name="eclipselink.ddl-generation" value="create-tables" />
			<property name="eclipselink.ddl-generation.output-mode" value="database" />
			
			<property name="eclipselink.logging.level" value="SEVERE"/> 
			<!--<property name="eclipselink.logging.level.sql" value="FINE"/>-->
			<!--<property name="eclipselink.profiler" value="PerformanceProfiler"/>-->
		</properties>

	</persistence-unit>
</persistence>